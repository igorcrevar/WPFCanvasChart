<Window x:Class="WPFBarChartExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:barchart="clr-namespace:IgorCrevar.WPFBarChartControl;assembly=WPFBarChartControl"
        Title="MainWindow" Height="350" Width="525">
    <Grid Background="#DDDDDDDD">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding Path=TestProperty}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14"/>
        <barchart:BarChart Model="{Binding Path=BarChartModel}" Grid.Row="1"/>
    </Grid>
</Window>
